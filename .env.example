# Server Configuration
PORT=3000

# Database Configuration
# These values are used by docker-compose.yml
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crawlly

# Full database URL (auto-constructed from above variables)
# For local development (outside Docker): use localhost
# For Docker: docker-compose will override DB_HOST to 'postgres'
DATABASE_URL=postgres://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=disable

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=info